<div class="ui inverted segment">
  <%=form_for @user, :html => {class:"ui form" , role: "form"} do |f| %>
    <div class="field">

      <%= f.label :username %>
      <%= f.text_field :username, class:"form-control", placeholder:"Enter Username", autofocus:true %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control", placeholder:"Enter Email" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, class:"form-control", placeholder:"Enter Password"%>
    </div>
    <%= f.button "Login", class: "ui submit button" %>
  <% end %>
</div>
