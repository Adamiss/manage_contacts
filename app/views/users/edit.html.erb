<h1 align="center"> Edit your profile </h1>
<div class="ui inverted segment">
  <%=form_for @user, :html => {class:"ui form" , role: "form"} do |f| %>
    <div class="field">

      <%= f.label :username %>
      <%= f.text_field :username, class:"form-control", placeholder:"Enter Username", autofocus:true %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control", placeholder:"Enter Email" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, class:"form-control", placeholder:"Enter Password"%>
    </div>
    <%= f.button "Edit", class: "ui submit button" %>
  <% end %>
  <%= link_to "Delete my profile", user_path(@user),
                                             method: :delete ,
                                             class: "ui inverted red basic button" ,
                                             date: {confirm: "Are you sure you want to delete the user
                                                               and all their contacts?" }%>
</div>

