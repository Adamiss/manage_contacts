<div class="ui small inverted fluid menu">
  <%= link_to "Public Contacts" , contacts_path, class: "item"%>
  <% if logged_in?  %>
    <%= link_to "All Contacts" , user_path(current_user), class: "item"%>
    <%= link_to "Groups", groups_path, class: "item" %>
  <% end %>

  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if !logged_in? %>
          <%= link_to "Log In ", login_path, class: "item" %>
        <% else %>
          <%= link_to "Log Out ", logout_path, method: :delete, class: "item" %>
        <% end %>
      </div>
    </div>
    <div class="item">
      <div class="ui primary button">
        <% if logged_in? %>
          <%= current_user.username %>
        <% else %>
          Sign Up
        <% end %>
      </div>
    </div>
  </div>
</div>